    <!-- 응원 댓글 작성하기 section -->
    <div class="container commentSection">
      <form action="/add" method="POST">
        <div class="card commentAdd">
          <div class="card-body">
            <input type="hidden" name="team" value="강릉시민축구단">
            <input type="hidden" name="link" value="/gnFC">
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">작성자</label>
              <textarea class="form-control" name="author" id="exampleFormControlTextarea1" rows="1"></textarea>
              <label for="exampleFormControlTextarea1" class="form-label">우리 팀 응원하기🙌</label>
              <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-warning">응원하기</button>
          </div>
        </div>
      </form>

      <!--응원 댓글 -->
      <div class="commentArea">
        <% if(commentInfo !=null){ %>
          <% for(let i=0; i<commentInfo.length; i++){ %>
            <div class="card comment-card" style="margin-top: 10px;">
                <div class="card-header">
                  <%=commentInfo[i].author%>
                </div>
                <div class="card-body">
                  <blockquote class="blockquote mb-0">
                    <p><%=commentInfo[i].comment%></p>
                  </blockquote>
                </div>
              
            </div>
        <% }} %>
      </div>
    </div>

