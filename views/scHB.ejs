<!--삼척시청 여자 핸드볼단 응원하기 페이지-->
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>삼척시청 여자 핸드볼단 응원하기🙌</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../style/comment.css">
    <link rel="stylesheet" href="../style/nav.css">
  </head>

  <body>

    <!-- 네비게이션 -->
    <%- include('nav.ejs') %>

      <!--Title-->
      <div class="container title">
        <table width="100%" style="table-layout: fixed; margin-bottom: 10px; text-align: center;">
          <tr>
            <td>
              <img src="https://w.namu.la/s/2072cca5153ca6c8547734bada629e2581c2de8afcfa2e577972b2af855fbed7f46b75220c00cc30aa975270dad29747312dc728bd32a3ab36768662398b50a5b6bd0e14e9ed2de10f5dc3481ae9cb1c5814db966e9f9c57909188a051b1ad64" style="width: 5cm; height: 5cm;" alt="">
            </td>
          </tr>
    
          <tr>
            <td style="color: beige;">
              <div style="text-align: center; margin-bottom: 15px; margin-top: 5px;"><h2>삼척시청 여자 핸드볼단 응원하기🙌</h2></div>
            </td>
          </tr>
        </table>
      </div>

    <!-- 응원 댓글 작성하기 section -->
    <div class="container commentSection">
      <form action="/add" method="POST">
        <div class="card commentAdd">
          <div class="card-body">
            <input type="hidden" name="team" value="삼척시청">
            <input type="hidden" name="link" value="/scHB">
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">작성자</label>
              <textarea class="form-control" name="author" id="exampleFormControlTextarea1" rows="1"></textarea>
              <label for="exampleFormControlTextarea1" class="form-label">우리 팀 응원하기🙌</label>
              <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-warning">응원하기</button>
          </div>
        </div>
      </form>

      <!--응원 댓글 -->
      <div class="commentArea">
        <% if(commentInfo !=null){ %>
          <% for(let i=0; i<commentInfo.length; i++){ %>
            <div class="card comment-card" style="margin-top: 10px;">
                <div class="card-header">
                  <%=commentInfo[i].author%>
                </div>
                <div class="card-body">
                  <blockquote class="blockquote mb-0">
                    <p><%=commentInfo[i].comment%></p>
                  </blockquote>
                </div>
              
            </div>
        <% }} %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>