<!--평창 유나이티드FC 응원하기 페이지-->
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Gangwon Sports</title>
    <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/9169/9169933.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../style/comment.css">
  </head>

  <body>

    <!-- 네비게이션 -->
    <%- include('./common/nav') %>

      
      <!--Title-->
    <div class="container title">
      <table width="100%" style="table-layout: fixed; margin-bottom: 10px; text-align: center;">
        <tr>
          <td>
            <img src="https://w.namu.la/s/d77042c92680f2e4e93f2fd57147f667e946655456e75069086d8ceef424659a1a9d7827b5f1301984bbbf3ef5597f84fc4ad2330e3e844bfbfd386044b843ee9988268af0ac8a42a2e331b435f701e63337332dcbd0a56405a4cbd2d63c734e" style="width: 5cm; height: 5cm;" alt="">
          </td>
        </tr>
  
        <tr>
          <td style="color: beige;">
            <div style="text-align: center; margin-bottom: 15px; margin-top: 5px;"><h2>평창 유나이티드FC 응원하기🙌</h2></div>
          </td>
        </tr>
      </table>
    </div>

    <!-- 응원 댓글 작성하기 section -->
    <div class="container commentSection">
      <form action="/add" method="POST">
        <div class="card commentAdd">
          <div class="card-body">
            <input type="hidden" name="team" value="평창 유나이티드FC">
            <input type="hidden" name="link" value="/pcuFC">
            <div class="mb-3">
              <label for="exampleFormControlTextarea1" class="form-label">작성자</label>
              <textarea class="form-control" name="author" id="exampleFormControlTextarea1" rows="1"></textarea>
              <label for="exampleFormControlTextarea1" class="form-label">우리 팀 응원하기🙌</label>
              <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-warning">응원하기</button>
          </div>
        </div>
      </form>

      <!--응원 댓글 -->
      <div class="commentArea">
        <% if(commentInfo !=null){ %>
          <% for(let i=0; i<commentInfo.length; i++){ %>
            <div class="card comment-card" style="margin-top: 10px;">
                <div class="card-header">
                  작성자: <%=commentInfo[i].author%>
                </div>
                <div class="card-body">
                  <blockquote class="blockquote mb-0">
                    <p><%=commentInfo[i].comment%></p>
                  </blockquote>
                </div>
              
            </div>
        <% }} %>
      </div>
    </div>

    <%- include('./common/upArrow') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>